{
  "name": "@cash-mgmt/pipeline",
  "version": "2.0.0",
  "description": "JSON processing pipeline for cash savings data",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "typecheck:tests": "tsc --noEmit --skipLibCheck",
    "test": "jest",
    "test:ci": "npm run typecheck && npm run test",
    "test:watch": "jest --watch",
    "cli": "npm run build && electron dist/cli.js",
    "start": "npm run cli"
  },
  "dependencies": {
    "@cash-mgmt/shared": "*"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0",
    "@types/better-sqlite3": "^7.6.8",
    "ts-jest": "^29.1.0"
  }
}
