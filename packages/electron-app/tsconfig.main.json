{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2020",
    "module": "commonjs",
    "jsx": "react-jsx",
    "declaration": true,
    "emitDeclarationOnly": false,
    "declarationDir": "./dist"
  },
  "include": [
    "src/main/**/*",
    "src/shared/**/*",
    "src/tests/**/*"
  ],
  "exclude": [
    "src/renderer/**/*"
  ]
}