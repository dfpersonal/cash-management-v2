{
  "name": "@cash-mgmt/electron-app",
  "version": "2.0.0",
  "private": true,
  "description": "Cash Management Electron Desktop Application",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:renderer": "webpack serve --config webpack.config.js --mode development",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "webpack --config webpack.config.js --mode production",
    "start": "electron .",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@cash-mgmt/shared": "*",
    "@mui/material": "^5.14.10",
    "@mui/x-data-grid": "^8.10.0",
    "@mui/x-charts": "^6.19.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.15.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "concurrently": "^8.2.1",
    "electron": "^32.0.0",
    "typescript": "^5.3.0",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
