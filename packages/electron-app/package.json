{
  "name": "@cash-mgmt/electron-app",
  "version": "2.0.0",
  "private": true,
  "description": "Professional Cash Portfolio Management System - Desktop Application",
  "main": "dist/main/main.js",
  "author": "Portfolio Management System",
  "license": "MIT",
  "scripts": {
    "postinstall": "cd ../.. && npx electron-rebuild -f -w better-sqlite3 && mkdir -p node_modules/better-sqlite3/lib/binding/node-v136-darwin-arm64 && ln -sf ../../../../../bin/darwin-arm64-136/better-sqlite3.node node_modules/better-sqlite3/lib/binding/node-v136-darwin-arm64/better_sqlite3.node",
    "start": "electron .",
    "start:debug": "electron . --dev",
    "start:dev": "concurrently \"npm run build:watch\" \"wait-on dist/main/main.js && electron . --dev\"",
    "start:verbose": "PIPELINE_VERBOSE=true electron .",
    "start:pipeline-debug": "PIPELINE_DEBUG=true electron .",
    "start:audit": "PIPELINE_AUDIT_ENABLED=true PIPELINE_AUDIT_OUTPUT=console electron .",
    "start:audit:db": "PIPELINE_AUDIT_ENABLED=true PIPELINE_AUDIT_OUTPUT=database electron .",
    "start:audit:verbose": "PIPELINE_AUDIT_ENABLED=true PIPELINE_AUDIT_OUTPUT=console PIPELINE_AUDIT_LEVEL=verbose electron .",
    "dev": "npm run start:dev",
    "dev:verbose": "PIPELINE_VERBOSE=true npm run start:dev",
    "dev:pipeline-debug": "PIPELINE_DEBUG=true npm run start:dev",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "webpack --mode production",
    "build:watch": "concurrently \"npm run build:main:watch\" \"npm run build:renderer:watch\"",
    "build:main:watch": "tsc -p tsconfig.main.json --watch",
    "build:renderer:watch": "webpack --mode development --watch",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.portfolio.cash-management",
    "productName": "Cash Management Desktop",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.finance",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "@cash-mgmt/optimization": "*",
    "@cash-mgmt/pipeline": "*",
    "@cash-mgmt/scrapers": "*",
    "@cash-mgmt/shared": "*",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@fullcalendar/core": "^6.1.19",
    "@fullcalendar/daygrid": "^6.1.19",
    "@fullcalendar/interaction": "^6.1.19",
    "@fullcalendar/list": "^6.1.19",
    "@fullcalendar/react": "^6.1.19",
    "@mui/icons-material": "^5.14.9",
    "@mui/material": "^5.14.10",
    "@mui/x-charts": "^6.19.8",
    "@mui/x-data-grid": "^8.10.0",
    "@types/archiver": "^6.0.3",
    "archiver": "^7.0.1",
    "better-sqlite3": "^12.2.0",
    "date-fns": "^4.1.0",
    "json-rules-engine": "^7.3.1",
    "process": "^0.11.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.15.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^20.6.0",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "concurrently": "^8.2.1",
    "css-loader": "^6.8.1",
    "electron": "^37.2.6",
    "electron-builder": "^24.6.4",
    "electron-devtools-installer": "^4.0.0",
    "electron-playwright-helpers": "^1.8.2",
    "eslint": "^8.49.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "null-loader": "^4.0.1",
    "playwright": "^1.55.0",
    "rimraf": "^5.0.1",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2",
    "wait-on": "^7.0.1",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.2"
  }
}
